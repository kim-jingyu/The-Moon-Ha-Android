<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageButton
                android:id="@+id/previousWeekButton"
                android:layout_width="24dp"
                android:layout_height="16dp"
                android:paddingEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_arrow_left" />

        <TextView
                android:id="@+id/tv_year_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Month Year"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

        <ImageButton
                android:id="@+id/nextWeekButton"
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:paddingHorizontal="8dp"

                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_arrow_right" />
    </LinearLayout>

    <GridLayout
            android:id="@+id/gl_day_of_the_week"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_year_month"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/vp_weekly_table"
            android:columnCount="8"
            android:rowCount="2">

        <!-- 요일 -->
        <TextView
                android:layout_width="21dp"
                android:layout_height="10dp"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:text="일"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_columnWeight="2"
                android:layout_gravity="fill" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_columnWeight="2"
                android:text="월"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_gravity="fill" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_columnWeight="2"
                android:text="화"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_gravity="fill" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_columnWeight="2"
                android:text="수"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_gravity="fill" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_columnWeight="2"
                android:text="목"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_gravity="fill" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_columnWeight="2"
                android:text="금"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_gravity="fill" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_columnWeight="2"
                android:text="토"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_gravity="fill" />
    </GridLayout>

    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_weekly_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            app:layout_constraintTop_toBottomOf="@+id/gl_day_of_the_week"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="10dp"/>

</LinearLayout>